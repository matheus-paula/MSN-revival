<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/inline_notification_background"
        android:elevation="6dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="62dp">

            <ImageView
                android:id="@+id/inlineNotProfilePhoto"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical|center_horizontal"
                app:srcCompat="@drawable/no_photo" />

            <ImageView
                android:id="@+id/inlineNotBgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/profile_status_online" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inlineNotUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingEnd="0dp"
                android:paddingStart="4dp"
                android:text="@string/your_name"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/inlineNotMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingEnd="0dp"
                android:paddingStart="4dp"
                android:text="@string/inline_notification_msg"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>