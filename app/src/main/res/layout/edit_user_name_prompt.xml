<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root_name"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/setNamePopupDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="12dp"
        android:text="@string/change_user_name_desc"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|clip_vertical|start"
        android:textAlignment="gravity"
        app:counterEnabled="true"
        app:counterMaxLength="30">

        <EditText
            android:id="@+id/editUserNameTextDialogInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/change_user_name_desc"
            android:inputType="text"
            android:labelFor="@string/change_user_name_desc"
            android:maxLength="30">

            <requestFocus />

        </EditText>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
